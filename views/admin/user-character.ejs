<%- include("inc/header.ejs");%>
<link rel="stylesheet" href="css/zTreeStyle.css">
<section id='content'>
	<div class='container-fluid'>
		<div class='row-fluid' id='content-wrapper'>
			<div class='span12'>
				<div class='page-header'>
					<h1 class="pull-left">
						<span>角色管理&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
					</h1>
				</div>
				<div class="span2 table-block tree-span">
					<ul id="treeDemo" class="ztree"></ul>
				</div>
				<div class="span9 table-block">
					<div class='btn-group span12'>
			            <a href="#" class="btn btn-white" onclick="ref()">刷新</a>
			            <a href="#" class="btn btn-white " onclick="add()">新增</a>
			            <a href="#" class="btn btn-white " onclick="edit()">编辑</a>
			            <a href="#" class="btn btn-white " onclick="del()">删除</a>
			            <!--<a href="#" class="btn btn-white ">离开</a>-->
					</div>
					<br> <br>
					<table id="user-character-list"></table>
				</div>
			</div>
		</div>
	</div>
</section>
<div class="modal fade" id="character-add-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: none;">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title" id="myModalLabel">添加用户</h2>
      </div>
		<form id="add-role">
			<div class="modal-body">
				<span>角色名称：</span><input type="text" name="name" required>
				<br> <br>
				<span>角色分类：</span>
				<select name="roleTypeId" id="roleType">
				</select>
				<br> <br>
				<span>所属公司：</span>
				<select name="companyId" id="companyId"></select>
				<br> <br>
				<span>选项：</span>
				<input type="checkbox" name="valid" value="true" id="valid"> 有效 &nbsp;&nbsp;
				<input type="checkbox" name="modifiable" value="true" id="modifiable"> 允许编辑&nbsp;&nbsp;
				<!--<input type="checkbox" name="" value="允许删除">-->
				<br> <br>
				<span>说明：</span><textarea row='4' style="width:80%" name="description" id="description"></textarea>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
				<input type="submit" class="btn btn-primary" value="添加角色" id="role-modal-submit"></input>
			</div>
		</form>

    </div>
  </div>
</div>
<script type="text/javascript" src="script/jquery.ztree.all.min.js"></script>
<script type="text/javascript" src="script/user-character.js"></script>
<%- include("inc/footer.ejs");%>