<%- include("inc/header.ejs");%>
<link rel="stylesheet" href="css/zTreeStyle.css">
<link rel="stylesheet" href="css/user-authority.css">
<section id='content'>
	<div class='container-fluid'>
		<div class='row-fluid' id='content-wrapper'>
			<div class='span12'>
				<div class='page-header'>
					<h1 class="pull-left">
						<span>角色管理&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
					</h1>
				</div>
				<div class="span2 table-block tree-span">
					<span class="span-title">组织机构</span> <br> <br>
					<ul id="company-list" class="ztree"></ul>
				</div>
				<div class="span2 table-block tree-span no-margin">
					<span class="span-title">角色列表</span> <br> <br>
					<ul id="role-list" class="ztree"></ul>
				</div>
				<div class="span8 table-block">
                    <div class='span12'>
                        <a href="#" class="link active" onclick="go(0)">模块设置</a>
                        <a href="#" class="link" onclick="go(1)">权限设置</a>
                    </div>
                    <br> <br>
					<div class='btn-group span12 block block0'>
			            <a href="#" class="btn btn-white" onclick="ref()">刷新</a>
			            <a href="#" class="btn btn-white " onclick="reset()">重置</a>
			            <a href="#" class="btn btn-white " onclick="setModule()">授权</a>
			            <!--<a href="#" class="btn btn-white ">离开</a>-->
					</div>
					<div class='btn-group span12 block block1' style="display: none">
						<a href="#" class="btn btn-white" onclick="">刷新</a>
						<a href="#" class="btn btn-white " onclick="sitPermission()">授权</a>
                        <a href="#" class="btn btn-white " onclick="sitSite()">添加站点权限</a>
						<a href="#" class="btn btn-white " onclick="getCity()">分配站点</a>
						<!--<a href="#" class="btn btn-white ">离开</a>-->
					</div>
					<br> <br>
					<div id="authority-table">
                        <span id="roleName"></span> <br>
   						<ul id="dataTree" class="ztree block0 block"></ul>
                        <span class="span12 block1 block" style="display:none">
                            <h2>筑脸头条</h2>
						    <table id="sitePermission0"></table>
						    <h2>政府招标</h2>
						    <table id="sitePermission1"></table>
						    <h2>广告管理</h2>
						    <table id="sitePermission2"></table>
						    <h2>系统权限管理</h2>
						    <table id="sitePermission3"></table>
                        </span>

					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<div class="modal fade" id="city-manage-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: none;">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h2 class="modal-title" id="myModalLabel">分配站点</h2>
			</div>
			<div class="modal-body">
				<ul id="city-list" class="ztree"></ul>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
				<button type="button" class="btn btn-primary" id="sit_city" onclick="sit_city()">设置站点</button>
			</div>


		</div>
	</div>
</div>

<script type="text/javascript" src="script/jquery.ztree.all.min.js"></script>
<script type="text/javascript" src="script/user-authority.js"></script>